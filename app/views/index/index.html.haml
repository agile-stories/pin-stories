-htitle '我们的产品'

:ruby
  products = Product.all
  
.page-products
  -products.each do |product|
    :ruby
      name = truncate_u(product.name, 10)
      description = product.description
      cover_url = product.cover.url
      
      members = product.members
      
      stories_count = product.stories.count
      streams_count = product.streams.count
      members_count = members.count
      
      product_show_url = "/products/#{product.id}"
      
    .product
      .meta-data
        =link_to product_show_url, :class=>'box' do
          .cover.auto-fit-image{:'data-src'=>cover_url, :'data-alt'=>name}
          .name= name

      .stat-data
        -if stories_count > 0
          %span.stat #{stories_count} stories

        .work-member.hide
          .members
            -members.each do |member|
              .avatar
                =link_to "/members/#{member.id}", :title=>member.name do
                  =avatar member, :mini
            
      -if admin_logged_in?
        .ops
          %a.edit.admin-btn{:href=>"/products/#{product.id}/edit"} 修改