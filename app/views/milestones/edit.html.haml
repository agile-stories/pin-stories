- htitle '编辑里程碑'

- hbreadcrumb '首页', '/'
- hbreadcrumb '里程碑', "/products/#{params[:product_id]}/milestones"

.page-new-milestone
  = form_for @milestone, :url => {:action => "update" } do |f|
    = flash_info
    .field.need
      %label 里程碑
      = f.text_field :name

      %label 状态
      = f.select(:state, options_for_select([['关闭', Milestone::State::CLOSED], ['打开', Milestone::State::OPEN]], :selected => f.object.state))

    .field.submit
      = jfsubmit '更新'
      = jfcancel '取消'
