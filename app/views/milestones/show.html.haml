- htitle '创建里程碑'

- hbreadcrumb '首页', '/'
- hbreadcrumb '里程碑', "/products/#{@milestone.product.id}/milestones"
- hbreadcrumb @milestone.name

.page-milestone-show
  .milestone-title
    里程碑 #{@milestone.name} - 用例清单

  .milestone-ops
    %a.create{:href=>"/milestones/#{@milestone.id}/usecases/new"} 增加用例

  .usecases
    = render 'usecases/parts/usecases', :usecases=>@milestone.root_usecases

  .new-report
    = link_to '创建检查报告', "/milestones/#{@milestone.id}/milestone_reports/new"
  .reports
    - @milestone.reports.each do |report|
      .report
        %a{:href=>"/milestone_reports/#{report.id}"} 
          %span= "#{report.title}"
          = jtime(report.created_at)