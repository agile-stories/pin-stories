= form_for Usecase.new, :url => {:action => 'create_usecase'} do |f|
  = flash_info
  .field.need
    %label 用例描述
    = f.text_field :content
    = f.hidden_field :product_id, :value => @milestone.product_id
    = f.hidden_field :milestone_id, :value => @milestone.id
    = f.hidden_field :usecase_id, :value => usecase_id

  .field.submit
    = jfsubmit '添加'
