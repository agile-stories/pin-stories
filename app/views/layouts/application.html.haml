-# MINDPIN 工程原型Layout

:ruby
  tstr = ((yield :title) || '').gsub("\n",'')
  title = tstr.blank? ? 'MINDPIN TEAM AGILE PLAYGROUND' : "#{tstr} - MINDPIN TEAM AGILE PLAYGROUND"

!!! 5
%html{:lang=>'zh'}
  %head
    %meta{:charset=>'utf-8'}
    %title=title
    = csrf_meta_tags
    = stylesheet_link_tag 'application'
    = yield :css
    = yield :head

  %body.echo.gray
    .page-wrap
      .page-container
        .page-header
          .h
            .title
              %a{:href=>'/'} MINDPIN TEAM AGILE PLAYGROUND
            -if logged_in?
              .user
                .current-user 欢迎你，#{current_user.name}
                .current-user-avatar=avatar current_user,:tiny
                .logout=link_to '登出','/logout'
            -else
              .to-login=link_to '我要登录啊','/login'
        .page-content
          = yield

    = javascript_include_tag 'application'
    = yield :javascript