:ruby
  tstr = ((yield :title) || '').gsub("\n",'')
  title = tstr.blank? ? 'MINDPIN TEAM AGILE PLAYGROUND' : "#{tstr} - MINDPIN TEAM AGILE PLAYGROUND"

!!! 5
%html{:lang=>'zh'}
  %head
    %meta{:charset=>'utf-8'}
    %title=title
    = csrf_meta_tags
    = stylesheet_link_tag 'application'
    = yield :css
    = yield :head

  %body.echo.gray
    .page-sider
      .head
        .title
          %a{:href=>'/'} MINDPIN. AGILE 
          .version build.0721

        -if logged_in?
          .welcome 你好，#{user_link current_user}

          .current-user-info
            .avatar= avatar current_user, :medium
            .my-task= link_to '我的任务', '/mine'
            
      .nav.hide
        %a.item{:class=>nav_current_klass(:products), :href=>'/'} 我们的产品
        %a.item{:class=>nav_current_klass(:members), :href=>'/members'} 成员和分享者
        -if logged_in?
          %a.item{:class=>nav_current_klass(:mine), :href=>'/mine'} 我的任务
          %a.item{:class=>nav_current_klass(:mine), :href=>'/drafts'} 我的草稿
        
      .hide.page-to
        .p=link_to '全部产品','/'

      .hide.page-ops
        =link_to "新建产品",'/products/new'

    .page-topbar
      .page-breadcrumb
        = yield :breadcrumb

      = yield :topbar
      
      .ops
        -if admin_logged_in?
          .admin= link_to '用户管理', '/admin'

        -if logged_in?
          .logout= link_to '退出登录', '/logout'

    .page-content
      = yield

    = javascript_include_tag 'application'
    = yield :javascript