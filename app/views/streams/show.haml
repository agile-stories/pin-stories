:ruby
  stream = @stream
  product = stream.product
  
  title = stream.title
  page_title = "序列: #{title}"

  product_url = "/products/#{product.id}"

-htitle page_title

.page-title
  %span=page_title
  %a.go-back{:href=>product_url} 回产品页

.page-stream-show
  .stories
    -@stories.each do |story|
      :ruby
        story_url = "/stories/#{story.id}"
        story_edit_url = "/stories/#{story.id}/edit"
        tips = story.tips
        estimate = story.time_estimate
        
      .story
        .story-id STORY ##{story.id}
        .how
          .ct=story.how_to_demo
        .status
          .estimate="#{estimate}H"
          .st=status_label story
        .ops
          .os
            %a.show{:href=>story_url} 查看详情
            -if admin_logged_in?
              %a.edit{:href=>story_edit_url} ADMIN:修改
		
