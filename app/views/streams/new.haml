:ruby
  product_name = @product.name
  product_show_url = "/products/#{@product.id}"

-htitle "创建序列: #{product_name}"

- hbreadcrumb '首页', '/'
- hbreadcrumb @product.name, "/products/#{@product.id}"
- hbreadcrumb '新建序列', "/products/#{@product.id}/streams/new"

.page-new-stream
  =flash_info
  =form_for @stream, :url=>"/products/#{@product.id}/streams" do |f|
    .field.need.placeholder
      %label 序列标题
      =f.text_field :title
    .field.submit
      %a.form-submit-button{:href=>'javascript:;'} 确定
      %a.form-cancel-button{:href=>product_show_url} 取消
		
