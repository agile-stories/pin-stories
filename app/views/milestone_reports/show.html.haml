- htitle '里程碑报告'

- hbreadcrumb '首页', '/'
- hbreadcrumb "#{@milestone.name}", "/products/#{@milestone.product_id}/milestones/#{@milestone.id}"



- content_for :javascript do
  :javascript
    jQuery(document).ready(function(){

      $("ul li a.input").live('click',function(){
        var usecase_id = $(this).data("id");
        $('#usecase-' + usecase_id + "-input-issue").show();
      });
    })

.table-of-contents
  %ul
    - @milestone.root_usecases.each do |usecase|
      %li
        %span.text= usecase.content

        %span{:id => "usecase-#{usecase.id}-input-label"}
          %a.input{:href=>'javascript:;', "data-id" => usecase.id} 填写结果
        %div{:id => "usecase-#{usecase.id}-input-issue", "data-id" => usecase.id, :style => "display: none;"}
          =render 'milestone_reports/parts/new_issue', :usecase_id => usecase.id
        

        =render 'milestone_reports/parts/sub_usecases', :usecase => usecase

