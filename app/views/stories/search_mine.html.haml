.page-title Stories

=render 'stories/parts/search_mine'

.page-wiki-search-results
  - if @assigned.blank?
    .count
      找到
      %span.n 0 
      条结果
  - else
    .count 
      找到 
      %span.n #{@assigned.length} 
      条结果


    - @assigned.each do |assign|
      :ruby
        path = "/stories/#{assign.story.id}"

        htd = assign.story.how_to_demo.gsub(@keyword, "<span class='match'>#{@keyword}</span>").html_safe
        tips = assign.story.tips.gsub(@keyword, "<span class='match'>#{@keyword}</span>").html_safe

      .wiki-page
        .ct=link_to htd, path
        .ct=tips
