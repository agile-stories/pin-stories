:ruby
  story = @story
  page_title = "故事 ##{@story.id}"
  product = story.product
  product_url = "/products/#{product.id}"
  
  streams = story.streams
  members = story.users

- htitle page_title

- hbreadcrumb '首页', '/'
- hbreadcrumb @story.product.name, "/products/#{@story.product.id}"
- hbreadcrumb page_title, "/stories/#{@story.id}"

.page-story-show{:'data-story-id'=>@story.id}

  .belongs-to
    .product=link_to product.name, product_url
    .streams
      -streams.each do |stream|
        .stream=link_to stream.title, "/streams/#{stream.id}"
  
  .save-to-wiki.hide
    - if has_referenced_by_wiki?(@story)
      = link_to "已经保存到wiki", "/products/#{@story.product.id}/wiki/#{referenced_title_by_wiki(@story)}"
    - else
      = link_to '保存到Wiki', "/stories/#{@story.id}/save_to_wiki", :confirm => "是否确定保存"

  .how-to-demo
    .t 如何演示 - HOW TO DEMO
    .ct=format_ct story, :how_to_demo
  
  -if !story.tips.blank?
    .tips
      .t 提示和备注 - TIPs
      .ct=format_ct story, :tips
  
  .assigned-members
    .t 指派给
    .members
      -members.each do |member|
        .member
          .avatar=avatar_link member
    - if members.blank?
      .no-member 尚未指派给任何人

  .add-ideas
    .t 添加一个想法

    - if story.source_idea
      .source-idea
        来源想法：
        = link_to "##{story.source_idea.id}", story.source_idea

    .add-idea= link_to '添加延伸想法', 'javascript:;'
    .ideas
      - if story.ideas.any?
        = render 'ideas/for_story', :story => story
    = form_for Idea.new, :url => create_for_story_ideas_path do |f|
      = flash_info
      = f.hidden_field :source_story_id, :value => story.id
      .field.need
        %label 想法内容
        = f.text_area :content
      .field.submit
        %a.submit-idea{:href => 'javascript:;'} 提交
        %a.cancel-idea{:href => 'javascript:;'} 取消

  = render 'stories/aj/show_status', :story=>@story

  - if admin_logged_in?
    .admin-ops
      .t 管理员操作
      .op=link_to '修改',"/stories/#{@story.id}/edit"
      .op=link_to '调整序列',"/stories/#{@story.id}/assign_streams"
      .op=link_to '指派执行人',"/stories/#{@story.id}/assign_users"
      .op.hide=link_to '历史记录', "/stories/#{@story.id}/versions"

= jcomments @story