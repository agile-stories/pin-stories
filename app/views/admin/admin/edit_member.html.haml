.page-title 管理员功能：修改成员信息

.page-signup
  = flash_info
  = form_for @member, :url=>"/admin/members/#{@member.id}" do |f|
    .field
      %label 电子邮箱
      = f.text_field :email,:maxlength=>50
    .field
      %label 用户名
      = f.text_field :name,:maxlength=>50
    .field
      %label 头像
      = f.file_field :logo
    .field
      %label 真实姓名
      = text_field_tag :real_name
    .field
      %a.form-submit-button{:href=>'javascript:;'} 确认
      %a.form-cancel{:href=>'/admin/members'} 取消