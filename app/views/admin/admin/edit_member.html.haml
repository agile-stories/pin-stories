.page-title 
  %span 管理员功能：修改成员信息
  %a.go-back{:href=>'/admin/members'} 回管理员界面

.page-admin-edit-member-info
  = flash_info
  = form_for @member, :url=>"/admin/members/#{@member.id}" do |f|
    .area.base
      .field
        %label 电子邮箱
        = f.text_field :email,:maxlength=>50
      .field
        %label 用户名
        = f.text_field :name,:maxlength=>50
      .field
        %label 头像
        = f.file_field :logo

    =f.fields_for :member_info do |mif|
      .area.bank-info
        .field.real-name
          %label 真实姓名
          = mif.text_field :real_name
        .field.phone-number
          %label 手机号
          = mif.text_field :phone_number
        .clearfix
        .field.bank-card-number
          %label 银行卡号
          = mif.text_field :bank_card_number
        .field.deposit-bank
          %label 开户行
          = mif.text_field :deposit_bank
        .clearfix

      .area.address
        .field.address
          %label 通信/收货地址
          = mif.text_area :address
        .field.post_code
          %label 邮编
          = mif.text_field :post_code

    .field
      %a.form-submit-button{:href=>'javascript:;'} 确认
      %a.form-cancel{:href=>'/admin/members'} 取消